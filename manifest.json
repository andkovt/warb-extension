{
    "manifest_version": 3,
    "name": "WARB Extension",
    "description": "Browser extension for WARB",
    "version": "1.0",
    "background": {
       "service_worker": "src/ts/background.ts",
       "type": "module"
    },
    "action": {
        "default_popup": "src/popup.html",
        "default_icon": "assets/icon.png"
    },
    "permissions": [
        "storage"
    ]
}